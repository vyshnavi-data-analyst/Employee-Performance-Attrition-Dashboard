import pandas as pd
# Load dataset
file_path = r"C:\Users\katka\OneDrive\Documents\vyshnavi\New folder\vyshu\self project\Employee_Project\raw data\Employee_Datasets.xlsx" 
df = pd. read_excel( file_path, sheet_name="Employee Performance Data" )
print(df.head())
print(df.shape)
# Clean column names
df.columns = (
    df.columns
      .str.strip()
      .str.lower()
      .str.replace(" ", "_", regex=False)
)
# Convert date columns
df["hire_date"] = pd.to_datetime(df["hire_date"], errors="coerce")
df["exit_date"] = pd.to_datetime(df["exit_date"], errors="coerce")
# Performance columns
perf_cols = [c for c in df.columns if c.endswith("_performance")]
df[perf_cols] = df[perf_cols].apply(pd.to_numeric, errors="coerce")
df["experience_(years)"] = pd.to_numeric(df["experience_(years)"], errors="coerce")
df["age"] = pd.to_numeric(df["age"], errors="coerce")
# Feature Engineering
df["avg_performance"] = df[perf_cols].mean(axis=1)
df["tenure_years"] = (
    (df["exit_date"].fillna(pd.Timestamp.today()) - df["hire_date"])
    .dt.days / 365
).round(2)
df["is_exited"] = df["exit_date"].notna().astype(int)
# Aggregations
dept_perf = (
    df.groupby("department", as_index=False)
      .agg(avg_performance=("avg_performance", "mean"))
      .round(2)
)
monthly_perf = (
    df[perf_cols]
      .mean()
      .reset_index()
      .rename(columns={"index": "month", 0: "avg_score"})
)
monthly_perf["month"] = monthly_perf["month"].str.replace("_performance", "")
manager_perf = (
    df.groupby("manager_name", as_index=False)
      .agg(avg_performance=("avg_performance", "mean"))
      .round(2)
)
attrition_df = pd.DataFrame({
    "total_employees": [len(df)],
    "exited_employees": [df["is_exited"].sum()],
    "attrition_rate_pct": [round(df["is_exited"].mean() * 100, 2)]
})
# Save processed outputs
output_path = "../data/processed/employee_dashboard_data.xlsx"
with pd.ExcelWriter(output_path) as writer:
    df.to_excel(writer, sheet_name="Employee_Detail", index=False)
    dept_perf.to_excel(writer, sheet_name="Dept_Performance", index=False)
    monthly_perf.to_excel(writer, sheet_name="Monthly_Performance", index=False)
    manager_perf.to_excel(writer, sheet_name="Manager_Performance", index=False)
    attrition_df.to_excel(writer, sheet_name="Attrition", index=False)
